{{#> layout currentPage="Blog"}}

    <!-- BLOG DETAIL SECTION -->
    <section class="blog-detail">
      <h1>{{blog.title}} </h1>

      <p>{{formatDateToWIB blog.createdAt}} | {{blog.authorId}}</p>

      <img
        src="{{blog.image}}"
        alt="Blog Image"
      />

      <p class="mt-3">
       {{blog.content}}
      </p>
    </section>

    {{/layout}}
